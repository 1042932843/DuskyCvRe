<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置背景色（白色） -->
    <item android:id="@android:id/background">
    <shape>   
        <corners android:radius="3dip" />   
        <gradient android:startColor="@color/alpha_background_dark"
                android:centerColor="@color/alpha_background_dark"
                android:centerY="0.75"   
                android:endColor="@color/alpha_background_dark"
                android:angle="270"   
        />   
    </shape> 
    </item>

    <!-- 设置进度条颜色（蓝色） -->
    <item android:id="@android:id/progress">
        <clip>
        <shape>   
            <corners android:radius="3dip" />   
            <gradient android:startColor="@color/theme_color_primary"
                android:endColor="@color/theme_color_primary"   />
        </shape> 
        </clip>
    </item>

</layer-list>